<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest02MainActivity">

    <EditText
        android:id="@+id/serverPortTextView"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints="false"
        android:ems="10"
        android:hint="@string/PORT"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clientPortTextView"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:autofillHints="false"
        android:ems="10"
        android:hint="@string/PORT"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clientIPTextView"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:autofillHints="false"
        android:ems="10"
        android:hint="@string/IP"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/serverConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="@string/Connect"
        app:layout_constraintStart_toEndOf="@+id/serverPortTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clientConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="160dp"
        android:text="@string/Connect"
        app:layout_constraintStart_toEndOf="@+id/serverPortTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/valueTextView"
        app:layout_constraintTop_toBottomOf="@+id/clientPortTextView" />

    <EditText
        android:id="@+id/valueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientPortTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>